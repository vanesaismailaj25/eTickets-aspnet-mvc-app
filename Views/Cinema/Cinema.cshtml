@model IEnumerable<Cinema>

@{
    ViewData["Title"] = "Cinema";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
          <thead>
              <tr>
                  <th> @Html.DisplayNameFor(model => model.Logo) </th>
                  <th> @Html.DisplayNameFor(model => model.Name) </th>
                  <th> @Html.DisplayNameFor(model => model.Description) </th>
                  <th> Actions </th>
              </tr>
          </thead>
          <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded" src="@item.Logo" style="max-width: 150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayNameFor(model => model.Name);
                        </td>
                        <td class="align-middle">
                            @Html.DisplayNameFor(model => model.Description);
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-primary"> <i class="bi bi-pencil-square"> Edit </i> </a>
                            <a class="btn btn-outline-info"> <i class="bi bi-eye"> Details </i> </a>
                            <a class="btn btn-danger"> <i class="bi bi-trash"> Delete </i> </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>